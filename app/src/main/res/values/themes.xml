<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Trenerskaya" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_medium</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/purple_lightest</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <!-- Цвета поверхностей -->
        <item name="android:colorBackground">@color/purple_darkest</item>
        <item name="colorSurface">@color/purple_surface_2</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/purple_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Скругления -->
        <item name="cornerRadius">16dp</item>
        <item name="cornerFamily">rounded</item>
        
        <!-- Ripple эффект -->
        <item name="colorControlHighlight">@color/purple_lightest</item>
        
        <!-- Карточки -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>

        <!-- Применяем стили компонентов -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Применяем стили текста -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.App.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>

        <!-- Анимации -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>

    <!-- Синяя тема -->
    <style name="Theme.Trenerskaya.Blue">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/blue_medium</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_lightest</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>
        
        <!-- Цвета поверхностей -->
        <item name="android:colorBackground">@color/blue_darkest</item>
        <item name="colorSurface">@color/blue_surface_2</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/blue_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Ripple эффект -->
        <item name="colorControlHighlight">@color/blue_lightest</item>
    </style>

    <!-- Фиолетовая тема -->
    <style name="Theme.Trenerskaya.Purple">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_secondary</item>
        <item name="colorSecondary">@color/purple_tertiary</item>
        <item name="android:colorBackground">@color/purple_background</item>
        <item name="colorSurface">@color/purple_surface</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Theme.Trenerskaya_23" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Стиль для карточек -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>