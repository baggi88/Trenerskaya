<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base night theme -->
    <style name="Theme.Trenerskaya" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorPrimaryVariant">@color/purple_lightest</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>
        <item name="colorSecondary">@color/purple_medium</item>
        <item name="colorSecondaryVariant">@color/purple_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <!-- Цвета поверхностей -->
        <item name="android:colorBackground">@color/purple_darkest</item>
        <item name="colorSurface">@color/purple_surface_1</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/purple_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Скругления -->
        <item name="cornerRadius">16dp</item>
        <item name="cornerFamily">rounded</item>
        
        <!-- Ripple эффект -->
        <item name="colorControlHighlight">@color/purple_lightest</item>
        
        <!-- Карточки -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView.Dark</item>
    </style>

    <!-- Night Blue theme -->
    <style name="Theme.Trenerskaya.Blue">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_lightest</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>
        <item name="colorSecondary">@color/blue_medium</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        
        <!-- Цвета поверхностей -->
        <item name="android:colorBackground">@color/blue_darkest</item>
        <item name="colorSurface">@color/blue_surface_1</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/blue_darkest</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Ripple эффект -->
        <item name="colorControlHighlight">@color/blue_lightest</item>
    </style>

    <!-- Night Purple theme -->
    <style name="Theme.Trenerskaya.Purple">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_secondary</item>
        <item name="colorSecondary">@color/purple_tertiary</item>
        <item name="android:colorBackground">@color/purple_background</item>
        <item name="colorSurface">@color/purple_surface</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- Стиль для темных карточек -->
    <style name="Widget.App.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/purple_surface_2</item>
    </style>
</resources>